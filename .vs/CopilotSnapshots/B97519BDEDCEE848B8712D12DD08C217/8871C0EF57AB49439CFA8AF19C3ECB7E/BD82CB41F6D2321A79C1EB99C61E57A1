#!/usr/bin/env python
"""Fix eventlet monkey patching in app.py"""

with open('app.py', 'r') as f:
    content = f.read()

# Check if monkey_patch is already there
if 'eventlet.monkey_patch()' in content:
    print('✓ eventlet.monkey_patch() is already present')
else:
    # Replace the first import eventlet line
    content = content.replace(
        'import eventlet\nfrom',
        'import eventlet\neventlet.monkey_patch()\n\nfrom',
        1
    )
    
    with open('app.py', 'w') as f:
        f.write(content)
    print('✓ Fixed: Added eventlet.monkey_patch() after first eventlet import')
