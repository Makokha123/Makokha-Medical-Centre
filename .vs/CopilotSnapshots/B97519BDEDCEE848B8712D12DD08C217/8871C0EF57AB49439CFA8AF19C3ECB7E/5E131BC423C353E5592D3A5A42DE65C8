#!/usr/bin/env python
"""Fix eventlet monkey patching in app.py"""

with open('app.py', 'r') as f:
    lines = f.readlines()

# Find the first import eventlet line and add monkey_patch after it
new_lines = []
for i, line in enumerate(lines):
    new_lines.append(line)
    if i == 0 and line.strip().startswith('import eventlet'):
        # Add monkey_patch call right after the first import
        new_lines.append('eventlet.monkey_patch()\n')
        new_lines.append('\n')

with open('app.py', 'w') as f:
    f.writelines(new_lines)

print('✓ Fixed: Added eventlet.monkey_patch() at line 2')
