    <!-- Messaging System Script -->
    <script>
    // ============================================================================
    // FLOATING MESSAGING ICON & PANEL FUNCTIONALITY
    // ============================================================================
    
    document.addEventListener('DOMContentLoaded', function() {
        const floatingIcon = document.getElementById('floatingMessagingIcon');
        const floatingPanel = document.getElementById('floatingMessagingPanel');
        const floatingPanelBody = document.getElementById('floatingPanelBody');
        const floatingBadge = document.getElementById('floatingMessageBadge');
        const closePanel = document.getElementById('closePanel');
        const refreshBtn = document.getElementById('refreshMessagesBtn');
        
        if (!floatingIcon) return; // Not authenticated
        
        // ========== DRAGGABLE FUNCTIONALITY ==========
        let isDragging = false;
        let currentX;
        let currentY;
        let initialX;
        let initialY;
        
        floatingIcon.addEventListener('dragstart', (e) => {
            isDragging = true;
            initialX = e.clientX - floatingIcon.offsetLeft;
            initialY = e.clientY - floatingIcon.offsetTop;
        });
        
        document.addEventListener('dragover', (e) => {
            e.preventDefault();
        });
        
        document.addEventListener('drop', (e) => {
            e.preventDefault();
            if (isDragging) {
                currentX = e.clientX - initialX;
                currentY = e.clientY - initialY;
                
                // Keep icon within viewport
                const maxX = window.innerWidth - floatingIcon.offsetWidth;
                const maxY = window.innerHeight - floatingIcon.offsetHeight;
                
                currentX = Math.max(0, Math.min(currentX, maxX));
                currentY = Math.max(0, Math.min(currentY, maxY));
                
                floatingIcon.style.right = 'auto';
                floatingIcon.style.bottom = 'auto';
                floatingIcon.style.left = currentX + 'px';
                floatingIcon.style.top = currentY + 'px';
                
                isDragging = false;
            }
        });
        
        // ========== TOGGLE PANEL ON ICON CLICK ==========
        floatingIcon.addEventListener('click', (e) => {
            e.preventDefault();
            floatingPanel.classList.toggle('show');
            if (floatingPanel.classList.contains('show')) {
                loadFloatingMessages();
            }
        });
        
        // ========== CLOSE PANEL ==========
        closePanel.addEventListener('click', () => {
            floatingPanel.classList.remove('show');
        });
        
        // Close panel when clicking outside
        document.addEventListener('click', (e) => {
            if (!floatingIcon.contains(e.target) && 
                !floatingPanel.contains(e.target) && 
                floatingPanel.classList.contains('show')) {
                floatingPanel.classList.remove('show');
            }
        });
        
        // ========== LOAD MESSAGES ==========
        function loadFloatingMessages() {
            fetch('/api/conversations')
                .then(res => res.json())
                .then(data => {
                    const conversations = data.conversations || [];
                    
                    if (conversations.length === 0) {
                        floatingPanelBody.innerHTML = `
                            <div class="floating-panel-empty">
                                <i class="bi bi-chat-dots"></i>
                                <div>No conversations yet</div>
                                <small>Start a new conversation to begin messaging</small>
                            </div>
                        `;
                        return;
                    }
                    
                    // Show latest 5 conversations
                    let html = '';
                    conversations.slice(0, 5).forEach(conv => {
                        const timestamp = new Date(conv.updated_at);
                        const timeStr = formatTime(timestamp);
                        const unreadClass = conv.unread_count > 0 ? 'unread' : '';
                        const unreadIndicator = conv.unread_count > 0 ? 
                            `<span class="badge bg-danger ms-1 position-absolute" style="top: 6px; right: 6px;">${conv.unread_count}</span>` : '';
                        
                        html += `
                            <a href="{{ url_for('messaging_dashboard') }}?conversation=${conv.id}" class="text-decoration-none">
                                <div class="floating-message-item ${unreadClass}">
                                    <div class="floating-message-sender">${conv.name}</div>
                                    <div class="floating-message-preview">${conv.last_message.substring(0, 50)}</div>
                                    <div class="floating-message-time">${timeStr}</div>
                                    ${unreadIndicator}
                                </div>
                            </a>
                        `;
                    });
                    
                    floatingPanelBody.innerHTML = html;
                })
                .catch(err => {
                    console.error('Error loading messages:', err);
                    floatingPanelBody.innerHTML = `
                        <div class="floating-panel-empty">
                            <i class="bi bi-exclamation-triangle"></i>
                            <div>Failed to load messages</div>
                        </div>
                    `;
                });
        }
        
        // ========== REFRESH MESSAGES ==========
        refreshBtn.addEventListener('click', () => {
            loadFloatingMessages();
        });
        
        // ========== UPDATE MESSAGE BADGE ==========
        function updateMessageBadge(count) {
            if (floatingBadge) {
                floatingBadge.textContent = count;
                if (count === 0) {
                    floatingBadge.classList.add('hidden');
                } else {
                    floatingBadge.classList.remove('hidden');
                }
                floatingBadge.setAttribute('data-unread', count);
            }
            
            // Update nav badges
            document.querySelectorAll('.message-badge').forEach(badge => {
                if (count === 0) {
                    badge.style.display = 'none';
                } else {
                    badge.textContent = count;
                    badge.style.display = 'flex';
                }
            });
        }
        
        // ========== CHECK FOR NEW MESSAGES ==========
        function checkForNewMessages() {
            fetch('/api/check_new_messages')
                .then(response => response.json())
                .then(data => {
                    if (data.unread_count > 0) {
                        updateMessageBadge(data.unread_count);
                        
                        // Update floating panel if visible
                        if (floatingPanel.classList.contains('show')) {
                            loadFloatingMessages();
                        }
                        
                        // Show browser notification if enabled
                        if ('Notification' in window && Notification.permission === 'granted') {
                            new Notification(`You have ${data.unread_count} new message(s)`, {
                                icon: '{{ url_for("static", filename="images/icon-192.png") }}',
                                badge: '{{ url_for("static", filename="images/icon-192.png") }}',
                                tag: 'mmc-messages',
                                requireInteraction: false
                            });
                        }
                    }
                })
                .catch(error => console.debug('Error checking messages:', error));
        }
        
        // ========== TIME FORMATTER ==========
        function formatTime(date) {
            const now = new Date();
            const diff = now - date;
            const minutes = Math.floor(diff / 60000);
            const hours = Math.floor(diff / 3600000);
            const days = Math.floor(diff / 86400000);
            
            if (minutes < 1) return 'Just now';
            if (minutes < 60) return `${minutes}m ago`;
            if (hours < 24) return `${hours}h ago`;
            if (days < 7) return `${days}d ago`;
            
            return date.toLocaleDateString();
        }
        
        // ========== REQUEST NOTIFICATION PERMISSION ==========
        if ('Notification' in window && Notification.permission === 'default') {
            Notification.requestPermission();
        }
        
        // ========== CHECK MESSAGES PERIODICALLY ==========
        checkForNewMessages(); // Check immediately
        setInterval(checkForNewMessages, 30000); // Check every 30 seconds
        
        // Also check when page becomes visible
        document.addEventListener('visibilitychange', function() {
            if (!document.hidden) {
                checkForNewMessages();
            }
        });
    });
    </script>

    {% block extra_js %}{% endblock %}
</body>
</html>