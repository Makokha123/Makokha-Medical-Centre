    <!-- jQuery 3.7.1 with correct SRI and robust fallback -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script>
    if (typeof window.jQuery === 'undefined') {
      var s = document.createElement('script');
      s.src = 'https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js';
      s.integrity = 'sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieZn1O6VY9j9a6U6ChjrHja9w/pp9y9cYxRcmRl6VwB2ykKQh8I9gCeRZ8g==';
      s.crossOrigin = 'anonymous';
      document.head.appendChild(s);
    }
    </script>
    <!-- Global jQuery AJAX setup to include CSRF token for unsafe HTTP methods -->
    <script>
    (function(){
      function getCsrfToken(){
        var el = document.querySelector('meta[name="csrf-token"]');
        return el ? el.getAttribute('content') : null;
      }
      // Wait until jQuery is available (covers fallback async load)
      function setup(){
        if (!window.jQuery) { return setTimeout(setup, 10); }
        $.ajaxSetup({
          beforeSend: function(xhr, settings){
            try{
              var method = (settings.type || settings.method || '').toUpperCase();
              if(['POST','PUT','PATCH','DELETE'].indexOf(method) !== -1){
                var token = getCsrfToken();
                if(token){ xhr.setRequestHeader('X-CSRFToken', token); }
              }
            }catch(e){ /* no-op */ }
          }
        });
      }
      setup();
    })();
    </script>
